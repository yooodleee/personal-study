{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "types": ["@nuxt/types"],
    "target": "ESNext",
  },
  "include": [
    "nuxt.config.ts",
    "components/**/*.vue",
    "plugins/**/*.ts",
  ],
}
